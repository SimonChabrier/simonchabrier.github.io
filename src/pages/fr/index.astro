---
import Layout from "@/layouts/Layout.astro";

import Hero from "@/components/sections/Hero.astro";
import About from "@/components/sections/About.astro";
import ThemeSwitch from "@/components/ThemeSwitch.astro";
import Experience from "@/components/sections/Experience.astro";
import Projects from "@/components/sections/Projects.astro";
import Skills from "@/components/sections/Skills.astro";
import Education from "@/components/sections/Education.astro";
import Tail from "@/components/sections/Tail.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";

import * as cv from "@cv-fr"; // parce que pas d'export par d√©faut sur le fichier je fait un import global
import * as legal from "@mentions-en";
const { basics, work, projects, skills, education, certificates } = cv;
---

<Layout title={`${basics.name} - ${basics.label}`}>
	<main class="relative grid max-w-7xl gap-12 p-8 max-sm:py-16 md:grid-cols-6 md:p-16 xl:gap-24 print:max-w-none print:grid-cols-1 print:gap-6">
		<div class="space-y-6 md:col-span-2 print:col-span-1 print:grid print:grid-cols-2 print:gap-5 print:space-y-0">
			<Hero locale="fr" basics={basics}/>
			<About locale="fr" summary={basics.summary} title="About"/>
			<ThemeSwitch locale="fr" />
		</div>
		<div class="space-y-12 md:col-span-4 print:col-span-1 print:grid print:grid-cols-4 print:gap-2 print:space-y-0">
			<Experience locale="fr" work={work} className="print:col-span-3" />
			<Projects locale="fr" projects={projects} className="print:hidden" />
			<Skills locale="fr" skills={skills} className="print:hidden" />
			<Education locale="fr" education={education} certificates={certificates} className="order-first" />
		</div>
		<Tail locale="fr" name={basics.name} profiles={basics.profiles} mentions={legal.mentions} />
	</main>
	<KeyboardManager />
</Layout>

<style>
	@page {
		size: auto;
		margin: 0mm;
	}
	main {
		margin: auto;
		width: 100%;
	}
</style>
